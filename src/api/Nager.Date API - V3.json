    "/api/v3/PublicHolidays/{year}/{countryCode}": {
      "get": {
        "tags": ["PublicHoliday"],
        "summary": "Get public holidays",
        "operationId": "PublicHolidayPublicHolidaysV3",
        "parameters": [
          {
            "name": "year",
            "in": "path",
            "description": "",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "countryCode",
            "in": "path",
            "description": "The Country Code `ISO 3166-1 alpha-2`",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Public holidays",
            "content": {
              "text/plain": {
